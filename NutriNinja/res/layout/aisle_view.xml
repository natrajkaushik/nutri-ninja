<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B2B2B2" >

        <TextView
            android:id="@+id/left_aisle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/left"
            android:textSize="20dp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/aisle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="100dp"
            android:text="@string/aisle"
            android:textSize="25dp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/right_aisle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:text="@string/right"
            android:textSize="20dp"
            android:textStyle="bold" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <View
                android:id="@+id/left_aisle_rectangle"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle" />

			<FrameLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			     >
			
            <View
                android:id="@+id/left_aisle_position_marker"
                android:layout_width="50dp"
                android:layout_height="100dp"
               
                android:background="@drawable/rectangle"
                android:visibility="invisible" />
            </FrameLayout>
        </FrameLayout>

        <ListView
            android:id="@+id/brand_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="#CCFF99"
            android:stackFromBottom="false" />

        <View
            android:id="@+id/right_aisle_rectangle"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/rectangle" />
    </RelativeLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B2B2B2"
        android:visibility="visible"
        android:orientation="horizontal"
         >

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/back"
            android:textSize="20dp"
            android:textStyle="bold" >
        </Button>

        <Button
            android:id="@+id/details_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:text="@string/details"
            android:textSize="20dp"
            android:textStyle="bold" >
        </Button>
    </LinearLayout>

</LinearLayout>