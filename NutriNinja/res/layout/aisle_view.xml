<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B2B2B2" >

        <TextView
            android:id="@+id/left_aisle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/left"
            android:textSize="20sp"
            android:textStyle="bold" >

        </TextView>

        <TextView
            android:id="@+id/aisle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Aisle 3"
            android:textSize="25sp"
            android:textStyle="bold" >

        </TextView>

        <TextView
            android:id="@+id/right_aisle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:text="@string/right"
            android:textSize="20sp"
            android:textStyle="bold" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" >

            <View
                android:id="@+id/left_aisle_rectangle"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/left_aisle_image"
                android:scaleType="matrix"
                android:src="@drawable/aisle_left" />

			<FrameLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			     >
			
            <View
                android:id="@+id/left_aisle_position_marker"
                android:layout_width="42dp"
                android:layout_height="100dp"
               
                android:background="@drawable/rectangle"
                android:visibility="invisible" />
            </FrameLayout>
        </FrameLayout>

        <ListView
            android:id="@+id/brand_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="5dp"
            android:background="#CCFF99"
            android:stackFromBottom="false" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/right_aisle_image"
            android:scaleType="matrix"
            android:src="@drawable/aisle_right" />

        <View
            android:id="@+id/right_aisle_rectangle"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/rectangle"
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#B2B2B2"
        android:visibility="visible"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/back"
            android:textSize="20sp"
            android:textStyle="bold" >
        </Button>
        
        <Button
            android:id="@+id/details_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:paddingLeft="10dp"
            android:text="@string/details"
            android:textSize="20sp"
            android:textStyle="bold" >

        </Button>
    </RelativeLayout>

</LinearLayout>
